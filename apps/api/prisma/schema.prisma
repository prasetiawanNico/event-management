model User {
  user_id       Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  password      String
  first_name    String
  last_name     String
  role          String
  referral_code String?
  point_balance String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model Apa {
  id   Int    @id @default(autoincrement())
  name String
}
